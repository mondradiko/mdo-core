{
  "name": "mondradiko-deps",
  "version-string": "0.0.0",
  "port-version": 1,
  "description": "portfile for managing Mondradiko VCPKG dependencies as a set",
  "homepage": "https://github.com/mondradiko/mondradiko",
  "dependencies": [
    "vulkan-sdk",
    "libuv",
    "openxr-loader",
    "flecs",
    {
      "name": "sdl2",
      "features": [ "vulkan" ]
    }
  ],
  "features": {
      "validation": {
        "description": "mondradiko-deps including vulkan validation",
        "dependencies": [ "vulkan-validation" ]
      }
  }
}
